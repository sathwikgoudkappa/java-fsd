// Subsection 2.2.1: Writing a program in JavaScript to verify implementation of functions

// Function to calculate the sum of two numbers
function sum(a, b) {
  return a + b;
}

// Function to calculate the product of two numbers
function product(a, b) {
  return a * b;
}

// Function to find the maximum of two numbers
function max(a, b) {
  return a > b ? a : b;
}

// Function to find the minimum of two numbers
function min(a, b) {
  return a < b ? a : b;
}

// Function to check if a number is even
function isEven(num) {
  return num % 2 === 0;
}

// Function to check if a number is odd
function isOdd(num) {
  return num % 2 !== 0;
}

// Subsection 2.2.2: Executing the program and verifying implementation of functions

// Testing the functions
console.log("Sum:", sum(5, 3)); // Output: 8
console.log("Product:", product(5, 3)); // Output: 15
console.log("Max:", max(5, 3)); // Output: 5
console.log("Min:", min(5, 3)); // Output: 3
console.log("Is 5 even?", isEven(5)); // Output: false
console.log("Is 6 even?", isEven(6)); // Output: true
console.log("Is 5 odd?", isOdd(5)); // Output: true
console.log("Is 6 odd?", isOdd(6)); // Output: false
